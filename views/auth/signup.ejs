<%- include("../partials/head.ejs") %>

<div class="min-h-screen bg-gray-100 flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-8 space-y-6">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-800">Create Account</h2>
      <p class="text-gray-500 text-sm">Sign up to get started</p>
    </div>

    <% if (errorMessage) { %>
    <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
      <%= errorMessage %>
    </div>
    <% } %>

    <form action="/signup" method="POST" class="space-y-4">
      <div class="flex gap-2">
        <div class="flex-1">
          <label
            for="firstName"
            class="block text-sm font-semibold text-gray-700"
            >First Name</label
          >
          <input
            type="text"
            name="firstName"
            id="firstName"
            required
            value="<%= oldInput?.firstName || '' %>"
            class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2"
          />
        </div>
        <div class="flex-1">
          <label
            for="lastName"
            class="block text-sm font-semibold text-gray-700"
            >Last Name</label
          >
          <input
            type="text"
            name="lastName"
            id="lastName"
            required
            value="<%= oldInput?.lastName || '' %>"
            class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2"
          />
        </div>
      </div>

      <div>
        <label for="email" class="block text-sm font-semibold text-gray-700"
          >Email</label
        >
        <input
          type="email"
          name="email"
          id="email"
          required
          value="<%= oldInput?.email || '' %>"
          class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2"
        />
      </div>

      <div>
        <label for="password" class="block text-sm font-semibold text-gray-700"
          >Password</label
        >
        <input
          type="password"
          name="password"
          id="password"
          required

          class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2"
        />
      </div>

      <div>
        <label
          for="confirmPassword"
          class="block text-sm font-semibold text-gray-700"
          >Confirm Password</label
        >
        <input
          type="password"
          name="confirmPassword"
          id="confirmPassword"
          required
          class="mt-1 w-full border border-gray-300 rounded-lg px-4 py-2"
        />
      </div>

      <div>
        <label for="userType" class="block text-sm font-semibold text-gray-700"
          >User Type</label
        >
        <select name="userType" id="userType">
          <option value="guest" <%= oldInput?.userType === "guest" ? "selected" : "" %>>Guest</option>
          <option value="host" <%= oldInput?.userType === "host" ? "selected" : "" %>>Host</option>
        </select>
      </div>

      <div class="flex items-center space-x-2">
        <input type="checkbox" name="terms" id="terms" required />
        <label for="terms" class="text-sm text-gray-700"
          >I agree to the terms and conditions</label
        >
      </div>

      <button
        type="submit"
        class="w-full bg-red-500 hover:bg-red-600 text-white py-2 rounded-lg font-semibold transition"
      >
        Sign Up
      </button>
    </form>

    <p class="text-center text-sm text-gray-500">
      Already have an account?
      <a href="/login" class="text-red-500 hover:underline">Log In</a>
    </p>
  </div>
</div>
