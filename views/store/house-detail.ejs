<%- include('../partials/head') %>
<body class="bg-[#f9f9f9] text-[#333] font-sans">
  <%- include('../partials/nav') %>

  <main class="max-w-3xl mx-auto px-4 py-10">
    <section class="bg-white shadow-sm rounded-xl overflow-hidden">
      <!-- Image -->
      <img 
        src="<%= house.photoUrl %>" 
        alt="<%= house.name %>" 
        class="w-full h-64 sm:h-[350px] object-cover"
      />

      <!-- Content -->
      <div class="p-6 space-y-4">
        <h1 class="text-3xl font-medium tracking-tight text-[#111]">
          <%= house.name %>
        </h1>

        <p class="text-base text-gray-600">
          <%= house.location %>
        </p>

        <div class="grid grid-cols-2 gap-4 pt-2 text-sm text-gray-700">
          <div>
            <span class="text-gray-500">Price</span><br />
            â‚¹<%= house.price %> per night
          </div>
          <div>
            <span class="text-gray-500">Rating</span><br />
            <%= house.rating %>/5
          </div>
        </div>

        <div class="pt-4 border-t text-sm leading-relaxed text-gray-700 whitespace-pre-line">
          <%= house.description %>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
