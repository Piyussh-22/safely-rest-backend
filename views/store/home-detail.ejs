<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <img src="<%= home.houseURL %>" alt="House Image" class="w-full h-64 object-cover" />

      <div class="p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= home.houseName %></h2>
        <p class="text-gray-600 mb-1">📍 Location: <%= home.houseLocation %></p>
        <p class="text-gray-600 mb-1">💸 Price: ₹<%= home.housePrice %></p>
        <p class="text-yellow-500 mb-4">⭐ Rating: <%= home.houseRating %>/5</p>

        <p class="text-gray-700 mb-4">
          This house offers premium amenities and a great location for your stay. More details coming soon.
        </p>

        <div class="flex gap-2">
          <a href="/book/<%= home.id %>" class="bg-amber-600 hover:bg-amber-700 text-white px-4 py-2 rounded transition flex-1 text-center">Book Now</a>
         
          <%- include('../partials/Favourite' , {home:home}) %>
          
          <a href="/" class="bg-gray-200 hover:bg-gray-300 text-gray-800 px-4 py-2 rounded transition flex-1 text-center">Back to Homes</a>
        </div>
      </div>
    </div>
  </main>

  <script>lucide.createIcons();</script>
</body>
</html>
