<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-8 text-red-500">
      Host mere Dost üôè 
    </h1>

    <% if (registeredHomes.length === 0) { %>
      <p class="text-center text-gray-400">No homes registered yet.</p>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
           
            <img
              src="<%= home.houseURL %>"
              alt="House Image"
              class="w-full h-48 object-cover"
            />

            
            <div class="flex justify-between p-4">
             
              <div class="flex flex-col">
                <span class="text-lg font-semibold text-gray-800">
                  ‚Çπ<%= home.housePrice %>
                </span>
                <span class="text-yellow-500">‚≠ê <%= home.houseRating %>/5</span>
              </div>

              
              <div class="flex flex-col text-right">
                <span class="font-bold text-gray-900">
                  <%= home.houseName %>
                </span>
                <span class="text-gray-600">
                  üìç <%= home.houseLocation %>
                </span>
              </div>
            </div>

            
            <div class="px-4 pb-4 flex flex-row gap-2">
              <a
                href="/host/edit-home/<%=home.id%>?editing=true"
                class="block bg-amber-600 hover:bg-amber-700 text-white text-center py-2 rounded transition flex-1"
              >
                Edit
              </a>
              
              <button class="block bg-amber-600 hover:bg-amber-700 text-white text-center py-2 rounded transition flex-1">
                Delete
              </button>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </main>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>
