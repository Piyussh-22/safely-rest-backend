<%- include('../partials/head') %>
<body class="bg-gray-50 min-h-screen font-sans text-gray-800">
  <%- include('../partials/nav') %>

  <main class="flex items-center justify-center min-h-[80vh] px-4">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-md p-8 space-y-6">
      <h1 class="text-3xl font-bold text-center text-amber-600 tracking-tight">
        <%= editing ? 'Edit House Details' : 'List Your House' %>
      </h1>

      <form
        action="<%= editing ? '/host/edit-house' : '/host/add-house' %>"
        method="POST"
        class="space-y-4"
      >
        <% if (editing) { %>
          <input type="hidden" name="houseID" value="<%= house.houseID %>" />
        <% } %>

        <div>
          <label class="block mb-1 font-medium text-gray-700">House Name</label>
          <input
            type="text"
            name="houseName"
            value="<%= house ? house.houseName : '' %>"
            placeholder="e.g. Ocean View Villa"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
          />
        </div>

        <div>
          <label class="block mb-1 font-medium text-gray-700">Location</label>
          <input
            type="text"
            name="houseLocation"
            value="<%= house ? house.houseLocation : '' %>"
            placeholder="e.g. Goa, India"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
          />
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block mb-1 font-medium text-gray-700">Price (₹)</label>
            <input
              type="number"
              name="housePrice"
              value="<%= house ? house.housePrice : '' %>"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
            />
          </div>

          <div>
            <label class="block mb-1 font-medium text-gray-700">Rating (1–5)</label>
            <input
              type="number"
              name="houseRating"
              min="1"
              max="5"
              value="<%= house ? house.houseRating : '' %>"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
            />
          </div>
        </div>

        <div>
          <label class="block mb-1 font-medium text-gray-700">Photo URL</label>
          <input
            type="url"
            name="housePhotoURL"
            value="<%= house ? house.housePhotoURL : '' %>"
            placeholder="https://image-link.com"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
          />
        </div>

        <div>
          <label class="block mb-1 font-medium text-gray-700">Description</label>
          <textarea
            name="houseDescription"
            rows="4"
            placeholder="Write about the house..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
          ><%= house ? house.houseDescription : '' %></textarea>
        </div>

        <div class="pt-4">
          <button
            type="submit"
            class="w-full bg-amber-600 hover:bg-amber-700 text-white font-semibold py-2 rounded-lg shadow-sm transition"
          >
            <%= editing ? 'Update House' : 'Add House' %>
          </button>
        </div>
      </form>
    </div>
  </main>

  <script>lucide.createIcons();</script>
</body>
</html>
